<link rel=stylesheet href="/css/explore-topic_header.css">
<header class="header2">
	<div class="wrap">
		<a href="/main" class="logo"><%= myweb.title %></a>
		<ul>
			<li>
				<a href="/main">首页</a>
			</li>
			<li>
				<a href="/explore">发现</a>
			</li>
			<li>
				<a href="/main">消息</a>
			</li>
		</ul>
		<div class="avatar">
			<img src="/img/<%= user.avatar %>">
			<span>
				<%= user.name %>
			</span>
		</div>
		<div class="user">
			<a href="/people/<%= user._id %>">我的主页</a>
			<a href="/signout">退出</a>
		</div>
	</div>
</header>

<script type="text/javascript">
	$(document).ready( function () {
		$(".avatar").hover(function(){
			$(".user").toggle()
		});
		$(".user").hover(function(){
			$(this).toggle()
		});
	})
</script>
